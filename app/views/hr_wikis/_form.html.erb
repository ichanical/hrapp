<%= form_for @hr_wiki, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :term, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :term, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :definition, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :definition, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hr_wikis_path, :class => 'btn' %>
  </div>
<% end %>
