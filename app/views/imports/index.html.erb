<%- model_class = Import -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:attachment_file_name) %></th>
      <th><%= model_class.human_attribute_name(:attachment_content_type) %></th>
      <th><%= model_class.human_attribute_name(:attachment_file_size) %></th>
      <th><%= model_class.human_attribute_name(:attachment_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= link_to import.id, import_path(import) %></td>
        <td><%= import.attachment_file_name %></td>
        <td><%= import.attachment_content_type %></td>
        <td><%= import.attachment_file_size %></td>
        <td><%= import.attachment_updated_at %></td>
        <td><%=l import.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_import_path(import), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      import_path(import),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_import_path,
            :class => 'btn btn-primary' %>
